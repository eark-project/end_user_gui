@model end_user_gui.Models.Order

@{
    Layout = "SelectSelector.cshtml";
    ViewBag.KeyColumn = "orderId";
    ViewBag.Column = "archivistId";
    ViewBag.Id = Model.OrderUniqueID;
    ViewBag.SpanPrefix = "selArch_";
    ViewBag.Controller = "Orders";
    ViewBag.Action = "SetArchivist";

    var l = new List<SelectListItem>(ViewBag.Archivists as IEnumerable<SelectListItem>);
    l.Insert(0, new SelectListItem() { Text = "(none)", Value = "---" });
    var listElelemnts = new SelectList(l, "Value", "Text", Model.Archivist?.UniqueId);
}

@section Select{
    @Html.DropDownList(
    "abc",
    listElelemnts,
    new { onchange = "updateSelectSaveLink(this, 'archivistId')" }
    )
}